<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/search_custom_title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <RelativeLayout
        android:id="@+id/webview_custom_back_wrap"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/yp_webview_back_background_youku"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/webview_custom_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:gravity="center"
            android:src="@drawable/yp_webview_back" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/webview_custom_update_wrap"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/yp_webview_back_background_youku"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center" >

        <ImageView
            android:id="@+id/webview_custom_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:gravity="center"
            android:src="@drawable/yp_webview_refresh_normal" />
    </RelativeLayout>

    <com.youku.player.ui.widget.AlwaysMarqueeTextView
        android:id="@+id/custom_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/webview_custom_update_wrap"
        android:layout_toRightOf="@+id/webview_custom_back_wrap"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:scrollHorizontally="true"
        android:singleLine="true"
        android:textColor="#000000"
        android:textSize="15sp"
        android:visibility="gone" />

</RelativeLayout>