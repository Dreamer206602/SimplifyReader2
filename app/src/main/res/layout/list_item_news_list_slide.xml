<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_list_item_bg_selector"
    android:paddingBottom="@dimen/list_item_news_list_padding_top_bottom"
    android:paddingLeft="@dimen/list_item_news_list_padding_left_right"
    android:paddingRight="@dimen/list_item_news_list_padding_left_right">

    <ImageView
        android:id="@+id/list_item_news_list_slide_divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/one_px"
        android:layout_marginBottom="@dimen/list_item_news_list_padding_top_bottom"
        android:background="@drawable/common_list_divider"
        android:layout_alignParentTop="true"/>

    <TextView
        android:id="@+id/list_item_news_list_slide_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|top"
        android:layout_below="@id/list_item_news_list_slide_divider"
        android:textSize="@dimen/big_small_text"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"/>


    <com.github.obsessive.simplifyreader.widgets.ImageContainerLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/list_item_news_list_padding_top_bottom"
        android:layout_below="@id/list_item_news_list_slide_title"
        android:id="@+id/list_item_news_list_slide_image_container"/>

</RelativeLayout>